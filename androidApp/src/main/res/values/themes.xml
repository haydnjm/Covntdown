<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Covntdown" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--   ADD COLOURS HERE     -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purpleAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/goldAccent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Covntdown.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>